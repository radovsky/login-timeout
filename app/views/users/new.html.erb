<form
    action="/users"
    method="post">

    <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

    <input
    name="user[username]"
    type="text"
    placeholder="username">

    <input
    name="user[password]"
    type="password"
    placeholder="password">

    <button type="submit" class="btn btn-default">Create Account</button>
</form>